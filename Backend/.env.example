# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
HOST=localhost

# ============================================
# DATABASE
# ============================================
# MongoDB connection string
# Local: mongodb://localhost:27017/thsport
# Cloud: mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_URI=mongodb://localhost:27017/thsport
DB_NAME=thsport

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate strong random strings for production:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1d

# Refresh token (if implemented)
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this
REFRESH_TOKEN_EXPIRES_IN=7d

# ============================================
# FRONTEND URL (for CORS)
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# SMTP settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@thsport.com

# ============================================
# CLOUDINARY (Optional - for image uploads)
# ============================================
# Get credentials from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# PAYMENT GATEWAY (Optional)
# ============================================
# VNPay configuration
VNPAY_TMN_CODE=your-tmn-code
VNPAY_HASH_SECRET=your-hash-secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:5000/api/payment/vnpay/callback

# MoMo configuration
MOMO_PARTNER_CODE=your-partner-code
MOMO_ACCESS_KEY=your-access-key
MOMO_SECRET_KEY=your-secret-key
MOMO_ENDPOINT=https://test-payment.momo.vn/v2/gateway/api/create

# ============================================
# LOGGING (Optional)
# ============================================
# Log level: error, warn, info, http, debug
LOG_LEVEL=debug

# ============================================
# RATE LIMITING (Optional)
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# SESSION (Optional)
# ============================================
SESSION_SECRET=your-session-secret-key-change-this
